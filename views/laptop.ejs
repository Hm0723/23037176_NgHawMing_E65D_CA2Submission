<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .card {
            height: 100%;
        }
        .card-img-top {
            object-fit: contain;
            height: 275px; 
            width: 100%;
        }
    </style>
    <title>Laptop Products</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-black navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Home</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">Category</a>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/pc">PC</a></li>
                <li><a class="dropdown-item" href="/laptop">Laptop</a></li>
                <li><a class="dropdown-item" href="/accessory">Accessory</a></li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-link text-white" role="button">
                    <a class="nav-link" href="/contact">Contact Us</a>
                </li>
                <li class="nav-link text-white" role="button">
                    <a class="nav-link" href="/about">About Us</a>
                </li>
                <li class="nav-link text-white" role="button">
                    <a class="nav-link" href="/addProduct">Add Product</a>
                </li>
            </ul>
        </div>
        
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Laptop Products</h2></div>
        <br>
        <% if (products.length > 0) { %>
            <div class="row">
                <% products.forEach(product => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="<%= product.image %>" class="card-img-top" alt="<%= product.productName %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.productName %></h5>
                                <a href="/product/<%= product.productId %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p>No Laptop products found.</p>
        <% } %>
        <a href="/" class="btn btn-primary mt-3">Back</a>
    </div>
</body>
</html>
