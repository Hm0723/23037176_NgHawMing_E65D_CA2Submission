<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Contact Us - Pc Shop App</title>
    <style>
        .contact-section {
            padding: 2rem 0;
        }

        .contact-card {
            border: none;
            margin-bottom: 2rem;
        }

        .contact-card .card-header {
            background-color: #fff;
            font-weight: bold;
        }

        .contact-card .card-body {
            padding: 0.5rem 1rem;
        }

        .contact-card .contact-info {
            display: flex;
            align-items: center;
        }

        .contact-card .contact-info i {
            font-size: 1.5rem;
            margin-right: 0.5rem;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-black navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <a class="nav-link dropdown-toggle text-white" href="#" role="button"
                    data-bs-toggle="dropdown">Category</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/pc">PC</a></li>
                        <li><a class="dropdown-item" href="/laptop">Laptop</a></li>
                        <li><a class="dropdown-item" href="/accessory">Accessory</a></li>
                    </ul>
                <ul class="navbar-nav">
                    <li class="nav-link text-white" role="button">
